.popup-container{
  background: #fff;
  width: 500rpx;
  height: 340rpx;
  line-height: 400rpx;
  border-radius: 20rpx;
  padding: 30rpx 10rpx 0 10rpx;
  box-shadow:0 8rpx 27rpx 6rpx rgba(0, 0, 0, .42);

}

.popup-btn {
  width: 100%;
  height: 240rpx;
  line-height: 120rpx;
  font-size: 50rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 0 50rpx;
}

.icon {
  height: 120rpx;
  width: 120rpx;
  color: black;
  border-radius: 100rpx;
  box-shadow:1rpx 1rpx 12rpx 0 rgba(0,0,0,.5);
