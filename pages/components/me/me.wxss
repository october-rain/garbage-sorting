/* pages/me/me.wxss */
.login {
  margin-top: 400rpx;
}

.show {
  width: 100%;
  height: 70vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.basic-info {
  width: 100%;
  height: 260rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-radius: 40rpx;
  padding: 0 50rpx;
  margin-top: 30rpx;
}

.avatar{
  box-shadow: 0rpx 0rpx 20rpx 4rpx rgba(0, 0, 0, 0.1);
  width: 150rpx;
  height: 150rpx;
}

.text {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.name {
  font-size: 36rpx;
  font-weight: 600;
  padding: 20rpx;
}

.cu-btn {
  box-shadow:0rpx 0rpx 30rpx 0 rgba(0,0,0,.15);
}

.my-icon {
  margin-right: 50rpx;
}